---
import '../styles/global.css';
import { Content as ResumeContent, frontmatter } from '../content/resume.md';

const { name, title, email, phone, linkedin, github, pdf } = frontmatter;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={`Professional resume and portfolio of ${name}`} />
		<title>Resume - {name}</title>
	</head>
	<body class="bg-gray-50 text-gray-900 antialiased">
		<main class="min-h-screen py-6 px-4 sm:px-6 lg:px-8">
			<div class="max-w-4xl mx-auto bg-white shadow-sm rounded-lg overflow-hidden">
				<!-- Header Section -->
				<header class="px-6 py-6 text-white" style="background-color: #0a1f0f;">
					<h1 class="text-3xl font-bold mb-1">{name}</h1>
					<p class="text-lg text-gray-200 mb-3">{title}</p>
					<div class="flex flex-wrap gap-3 text-sm text-gray-300">
						<a href={`mailto:${email}`} class="hover:text-white transition-colors">
							{email}
						</a>
						<span class="text-gray-600">|</span>
						<a href={`tel:${phone}`} class="hover:text-white transition-colors">
							{phone}
						</a>
						<span class="text-gray-600">|</span>
						<a href={linkedin} target="_blank" class="hover:text-white transition-colors">
							LinkedIn
						</a>
						<span class="text-gray-600">|</span>
						<a href={github} target="_blank" class="hover:text-white transition-colors">
							GitHub
						</a>
						<span class="text-gray-600">|</span>
						<a href={pdf} download={`CV - ${name}.pdf`} class="hover:text-white transition-colors">
							Download PDF
						</a>
					</div>
				</header>

				<!-- Markdown Content -->
				<div class="px-6 py-6 prose prose-gray max-w-none">
					<ResumeContent />
				</div>
			</div>
		</main>
	</body>
</html>
